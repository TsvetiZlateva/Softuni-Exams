 {{> header}}
 
    <!-- Edit -->
  <main id="home-logged">
    <section class="first-section">
      <section class="background-container">
        <form action="#/edit/{{event.id}}" method="post" class="edit-form">
          <h1>Edit Post</h1>
          <label for="title">Title</label>
          <input type="text" name="title" value="{{event.title}}">
          <label for="category">Category</label>
          <input type="text" name="category" value="{{event.category}}">
          <label for="content">Content</label>
          <textarea name="content" cols="30" rows="7">{{event.content}}</textarea>
          <button>Edit</button>
          <a href="" id="close-btn"><img src="../../images/close.png"></a>
        </form>
      </section>
    </section>

{{!-- {{> posts}} --}}
    <!-- Posts -->
    <section class="second-section">
      <h3>Posts</h3>
      <hr>
      <div class="posts-row">
         {{!-- {{#if isAuthor}} --}}
        {{#each events}}
        <!-- Post -->
        <article class="post">
          <h1>{{title}}</h1>
           <h2><span>{{category}}</span></h2>
            <p>{{content}}</p>
            <a href="#/close/{{id}}" id="delete-button">Delete</a>
            <a href="#/details/{{id}}" id="details-button">Details</a>
            <a href="#/edit/{{id}}" id="edit-button">Edit</a>
        </article>
        {{/each}}
        {{!-- {{/if}} --}}
      </div>
    </section>

  </main>

   {{> footer}}